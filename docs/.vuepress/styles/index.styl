@import url("https://fonts.googleapis.com/css2?family=Gugi&family=Noto+Sans+KR:wght@400;500;700&family=Ubuntu:wght@500;700&display=swap");

* 
  font-family: "Noto Sans KR", sans-serif
  box-sizing: border-box


.sidebar-links > li .sidebar-group > p.sidebar-heading + ul 
    display: none

.sidebar-links > li .sidebar-group > p.sidebar-heading.open
    color: rgb(104, 104, 172)

.sidebar-links > li .sidebar-group > p.sidebar-heading.open + ul {
    display: block
}

.sidebar-links > li .sidebar-group > p.sidebar-heading.open:after {
    transform: rotate(360deg)
    top: 12px
    right: 17px;
}

.navbar .links > .search-box > ul.suggestions:hover *,
.navbar .links > .search-box > ul.suggestions *:hover
    color: #222 !important

.navbar a:hover,
.navbar a:hover .site-name
    color: rgb(104, 104, 172) !important

.sidebar > .sidebar-links > li > a.sidebar-link
    font-size: 1em !important

.navbar .site-name
    font-size: 1.2rem !important
    letter-spacing: -0.5px

.sidebar > .sidebar-links > li:not(:first-child) 
    margin-top:0.2rem !important

.phrygia_info_post {
  margin: 50px auto 0;
}

.phrygia_info_post dl 
    padding-bottom: 25px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #eee;

.phrygia_info_post dl dt 
    width: 146px
    height: 140px
    overflow: hidden

.phrygia_info_post dl dt img 
    width: 140px
    height: 140px
    margin: 0
    border-radius: 100%
    border: 1px solid #f1f1f1

.phrygia_info_post dl dd 
    margin-left: 25px
    width: -webkit-calc(100% - 142px)
    width: calc(100% - 142px)

.phrygia_info_post dl dd strong 
    color: #323232
    font-size: 18px
    letter-spacing: -1px

.phrygia_info_post dl dd p 
    word-break: break-all;
    margin-top: 20px;
    font-size: 14px;
    color: #ababab;
    font-weight: 300;

@media (max-width: 767px) 
    .phrygia_info_post dl 
        padding: 15px 15px 10px;
        
    .phrygia_info_post dt 
        width: 72px;

    .phrygia_info_post dt img
        width: 70px;
        height: 70px;

    .phrygia_info_post dd 
        margin-left: 15px;
        width: -webkit-calc(100% - 72px);
        width: calc(100% - 72px);

    .phrygia_info_post dd strong 
        font-size: 1.1em;
        
    .phrygia_info_post dd p 
        margin-top: 8px;
        font-size: 0.85em;
        line-height: 1.4;

.search-box 
    margin-right: 0 !important

.nav-links .nav-item 
    margin-left: 1rem !important

.ph_tbl th
    background-color: #f2f2f3;

.ph_tbl td
    padding: 0.5em 1em;
    background-color: #fff;


small.from, div.from 
    display: block;
    word-break: break-all;
    font-size: 11.5px;
    color: #ababab;

small.from a, div.from a
    color: #4a9ae1;
    text-decoration: none;
    border-bottom: 0;
    word-break: break-all;

small.from.add, div.from .add 
    margin-top: 50px;
    padding-top: 10px;
    border-top: 1px solid #aaa;

small.from.add ul, div.from .add ul    
    margin-top: 3px;
    padding-left: 15px;
    list-style: none;

small.from.add ul li, div.from .add ul li 
    list-style: none;

small.from.add *::marker , div.from *::marker 
    font-size: 0;

small.from.add ul a, div.from .add ul a  
    display: block;

.blockquote 
    background-color: #f9f9f9;
    border-left: 5px solid #99f;
    margin: 0 0 1rem;
    padding: 0.8rem 1rem 0.8rem 1.3rem;


div[class*="language-"], div[class*="language-"] *, div[class*="language-"] code
    font-size: 15.5px;

.theme-default-content:not(.custom), .theme-default-content code
    font-size: 16.5px;

.theme-default-content:not(.custom) p 
    line-height: 1.9;

@media (max-width: 440px) 
    h1 
        font-size: 1.6rem;
    h2
        font-size: 1.3rem;
    main.page 
        font-size: 14.5px;
    div[class*="language-"] code
        font-size: 14px;
    .theme-default-content:not(.custom), .theme-default-content code
        font-size: 15px;
    .theme-default-content:not(.custom)
        padding: 30px 20px 0; 
    .sidebar-button 
        left: 10px;
    .navbar
        padding-left: 55px !important;